<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user.nengli51.mapper.UserDao">
    <select id="queryAll" resultType="com.nengli51.domain.User">
        select *
        from user;
    </select>

    <select id="query" resultType="com.nengli51.domain.User" parameterType="Integer">
        select *
        from user
        where uid = #{uid}
    </select>

    <insert id="addUser" parameterType="com.nengli51.domain.User">
        insert into user
        values (null, #{username}, #{sex}, #{birthday}, #{address});
    </insert>

    <update id="updateUser" parameterType="com.nengli51.domain.User">
        update user
        set username=#{username},
            sex=#{sex},
            birthday=#{birthday},
            address=#{address}
        where uid = #{uid}
    </update>

    <delete id="deleteUser" parameterType="Integer">
        delete
        from user
        where uid = #{uid}
    </delete>

</mapper>